manifest {
    description = 'Pipeline for quanitifying amplicon-based NGS experiments'
    mainScript = 'main.nf'
    author = "Thomas W. Battaglia"
}

// Set default parameters
params {
  fastq = ''
  library = ''
  mode = 'library'
  mapper = 'bowtie2'
  outdir = 'results'
  length = 0
  quality = 10
  check = false
  dedup = false
  perfect = true
  semiperfect = false
  reverse = false
  cut5 = 0
  cut3 = 0
  help = false
  print = false
  tracedir = "${params.outdir}/pipeline_info"
}

//process.conda = "$baseDir/environment.yaml"
process.conda = "/home/t.battaglia/miniconda3/envs/amplicon-nf/"

process.maxForks = 1

// Capture Nextflow reports into separate directory
timeline {
  enabled = true
  file = "${params.tracedir}/timeline.html"
}
report {
  enabled = true
  file = "${params.tracedir}/report.html"
}
trace {
  enabled = true
  file = "${params.tracedir}/trace.txt"
}
dag {
  enabled = true
  file = "${params.tracedir}/DAG.svg"
}
